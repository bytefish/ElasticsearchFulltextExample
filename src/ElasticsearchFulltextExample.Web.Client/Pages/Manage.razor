@page "/ManageSearchIndex"

@    using ElasticsearchCodeSearch.Web.Client.Components
@    using ElasticsearchCodeSearch.Web.Client.Extensions;
@    using ElasticsearchCodeSearch.Web.Client.Infrastructure;
@    using ElasticsearchCodeSearch.Models
@    using ElasticsearchCodeSearch.Shared.Dto;
@    using ElasticsearchCodeSearch.Shared.Services

@inject SearchClient ElasticsearchCodeSearchService
@inject IStringLocalizer<SharedResource> Loc

<PageTitle>Manage Search Index (Debugging)</PageTitle>

<FluentStack Orientation="Orientation.Vertical">
    <FluentButton Style="@("width: 250px;")" Appearance="Appearance.Accent" Name="create-search-index" OnClick="HandleCreateSearchIndexAsync">@Loc["ManageSearchIndex_CreateSearchIndex"]</FluentButton>
    <FluentButton Style="@("width: 250px;")" Appearance="Appearance.Accent" Name="delete-search-index" OnClick="HandleDeleteSearchIndexAsync">@Loc["ManageSearchIndex_DeleteSearchIndex"]</FluentButton>
    <FluentButton Style="@("width: 250px;")" Appearance="Appearance.Accent" Name="recreate-search-index" OnClick="HandleRecreateSearchIndexAsync">@Loc["ManageSearchIndex_RecreateSearchIndex"]</FluentButton>
    <FluentButton Style="@("width: 250px;")" Appearance="Appearance.Accent" Name="delete-all-documents" OnClick="HandleDeleteAllDocumentsAsync">@Loc["ManageSearchIndex_DeleteAllDocuments"]</FluentButton>
</FluentStack>
